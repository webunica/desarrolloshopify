datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Lead {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  whatsapp  String
  plan      String?
  message   String?
  createdAt DateTime @default(now())
}

model Article {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  excerpt     String?
  content     String
  imageUrl    String?
  category    String?
  publishedAt DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}