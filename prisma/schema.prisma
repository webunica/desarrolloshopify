generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}

model Lead {
  id        String    @id @default(cuid())
  email     String    @unique
  createdAt DateTime  @default(now())
  projects  Project[]
}

model Project {
  id        String        @id @default(cuid())
  token     String        @unique
  status    ProjectStatus @default(DRAFT)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  leadId    String
  answers   Answer[]
  files     File[]
  lead      Lead          @relation(fields: [leadId], references: [id])
  sections  Section[]

  @@map("projects")
}

enum ProjectStatus {
  DRAFT
  SUBMITTED
  PAID
  IN_PROGRESS
  REVIEW
  COMPLETED
}

model Answer {
  id        String  @id @default(cuid())
  step      Int
  key       String
  value     String
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model Section {
  id        String  @id @default(cuid())
  type      String
  content   String
  order     Int     @default(0)
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model File {
  id        String   @id @default(cuid())
  name      String
  path      String
  size      Int
  mimeType  String
  createdAt DateTime @default(now())
  projectId String
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model SitePage {
  id        String        @id @default(cuid())
  slug      String        @unique
  title     String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  sections  SiteSection[]
}

model SiteSection {
  id        String   @id @default(cuid())
  component String
  name      String
  content   String
  order     Int      @default(0)
  isVisible Boolean  @default(true)
  pageId    String
  page      SitePage @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@index([pageId])
}

model BlogArticle {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  excerpt     String?
  content     String
  category    String
  imageUrl    String?
  author      String?   @default("DesarrolloShopify.cl")
  published   Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
